{
    "rename-icon" : "co.tauos.Victrola",
    "id": "co.tauos.Victrola",
    "runtime" : "co.tauos.Platform",
    "runtime-version" : "stable",
    "sdk" : "co.tauos.Sdk",
    "command": "co.tauos.Victrola",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=xdg-run/pipewire-0:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "victrola",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                },
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "branch": "main",
                    "dest": "./subprojects/blueprint-compiler"
                },
                {
                    "type": "git",
                    "url": "https://github.com/tau-os/libbismuth",
                    "branch": "main",
                    "dest": "./subprojects/libbismuth"
                }
            ]
        }
    ]
}
