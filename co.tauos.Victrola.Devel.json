{
    "app-id": "co.tauos.Victrola",
    "runtime" : "co.tauos.Platform",
    "runtime-version" : "daily",
    "sdk" : "co.tauos.Sdk",
    "command": "co.tauos.Victrola",
    "desktop-file-name-suffix" : " (Development Build)",
    "finish-args": [
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=/tmp",
        "--filesystem=xdg-music:ro",
        "--filesystem=xdg-download:ro",
        "--filesystem=xdg-run/pipewire-0:ro",
        "--filesystem=xdg-run/gvfsd"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name" : "victrola",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=true"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                }
            ]
        }
    ]
}